<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:padding="4dp" >

    <EditText
        android:id="@+id/editText_msg"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imageButton_send"
        android:background="@drawable/edittext_bg"
        android:ems="10" />

    <ImageButton
        android:id="@+id/imageButton_send"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#FFF"
        android:src="@drawable/ic_send" />

    <ScrollView
        android:id="@+id/scrollView_logchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText_msg"
        android:layout_alignLeft="@+id/editText_msg"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:transcriptMode="alwaysScroll" >

        <LinearLayout
            android:id="@+id/layout_logchat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/counter_text_color"
            android:orientation="vertical"
            android:padding="4dp" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>